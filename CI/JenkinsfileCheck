pipeline {
    agent {
        label 'openshift-prg'
    }

    stages {
        stage('SCM Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Check') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'sftp-countries', keyFileVariable: 'keyFile', usernameVariable: 'user')]) {
                    sh """./CI/schema-validation.sh ${keyFile}"""
                }
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'schema_validation/logs/import-validation.log.gz', fingerprint: true
            archiveArtifacts artifacts: 'schema_validation/logs/failing-folders.txt', fingerprint: true
        }
    }


}
